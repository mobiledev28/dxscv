                                settings.ToolTip = "Haz clic para ver el listado de vehiculos de Metalinspec";

                            }).GetHtml()
                        </td>
                        <td style="text-align:center;">
                            @Html.DevExpress().HyperLink(settings =>
                            {

                                //settings.NavigateUrl = "~/Vehiculo/Index?Filterby=3";
                                settings.NavigateUrl = "~/Vehiculo/Vehiculos?Filterby=3";
                                settings.Properties.Text = "Metalinspec Laboratorios";
                                settings.Properties.ImageUrl = "~/Content/Images/MTL.png";
