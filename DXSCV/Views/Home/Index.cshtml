                                //settings.NavigateUrl = "~/Vehiculo/Index?Filterby=4";
                                settings.NavigateUrl = "~/Vehiculo/Vehiculos?Filterby=4";
                                settings.Properties.Text = "MetroLab";
                                settings.Properties.ImageUrl = "~/Content/Images/ML.png";
                                settings.Properties.ImageWidth = 180;
                                settings.Properties.ImageHeight = 55;
                                settings.Enabled = Model.ShowLinkMetroLab;
                                settings.ToolTip = "Haz clic para ver el listado de vehiculos de MetroLab";

                            }).GetHtml()
                        </td>
                    </tr>
                </table>
            </td>
            <td style="width:2%;"></td>
        </tr>
        <tr>
            <td colspan="4" style="height:40px;"></td>
        </tr>
        <tr>
            <td colspan="4" align="center">
                <h2>Notificaciones</h2>
            </td>
        </tr>
        <tr>
            <td colspan="4">
                @Html.Partial("SchedulerPartial", Model)
                @*@Html.Partial("GridViewPartialView", Model)*@
            </td>
        </tr>
    </table>

</div>